{
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost; Database=PriceTracker; User ID=postgres; Password=123; Port=5432;"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "MerchUpsertionOptions": {

    "CitilinkUpsertionOptions": {
      // Период обновления цен в днях
      "CitilinkPriceUpdatePeriod": 7,
      // Минимальная и максимальная задержка браузера в секундах при парсинге (НА ДАННЫЙ МОМЕНТ НЕ РАБОТАЕТ И НИ
      // НА ЧТО НЕ ВЛИЯЕТ)
      "HeadlessBrowserMinDelay": 15,
      "HeadlessBrowserMaxDelay": 30,

      // Максимально допустимое число запросов в рамках заданного временного промежутка. Запросом считается либо
      //полная загрузка html-документа со всеми его связями, либо действительно один запрос (как правило, весящий
      //достаточно много)
      "MaxPageRequestsPerTime": 300,
      // Время указывается в часах.
      "MinCooldownForPageRequests": 12,
      "CitilinkMainCatalogUrl": "https://www.citilink.ru/catalog/",
      "CitilinkUrl": "https://www.citilink.ru/",
      "CitilinkAPIRoute": "https://www.citilink.ru/graphql/",
      "IgnoredCategorySlugs": [],
      "CitilinkHttpClientCookie": "_city_guessed=1; _space=chlb_cl; _tuid=afe6c93ebb00a653fa10981930de680623afd184; ab_test_segment=56 "
    },
    // Должен ли работать апсершн товаров, вместе с веб-интерфейсом и БД?
